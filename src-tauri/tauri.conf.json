{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "markdown-memo",
    "version": "0.1.0",
    "identifier": "9506hqwy.markdown.memo",
    "mainBinaryName": "memo",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Markdown MEMO",
                "width": 800,
                "height": 600,
                "fullscreen": false,
                "resizable": true,
                "maximizable": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": false,
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "cli": {
            "description": "Markdown MEMO",
            "args": [
                {
                    "name": "path",
                    "short": "p",
                    "takesValue": true,
                    "required": false
                },
                {
                    "name": "memory",
                    "required": false
                }
            ]
        }
    }
}
